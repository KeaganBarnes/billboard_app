<%= form_with(model: @artist, local: true, class: "ui form") do |f| %>
  <div class="field">
    <p class="ui grey inverted header"> <%= f.label :name %> </p>
    <%= f.text_field :name, required: true, placeholder: "Artist's Name" %>
  </div>
  <div class="field">
    <p class="ui grey inverted header"> <%= f.label :genre %> </p>
    <%= f.text_field :genre, placeholder: "Metal, Rock, Rap, Pop, etc,..." %>
  </div>
  <div class="field">
    <p class="ui grey inverted header"> <%= f.label :bio %> </p>
    <%= f.text_area :bio, placeholder: "A brief biography about the Artist..." %>
  <br />
  <br />
    <%= f.submit class: "ui inverted blue basic button" %>
  </div>

  <% end %>