<h1 class="ui header"> Billboard</h1>
<h2> Top 100</h2>
<div class="ui divider"></div>

<%= link_to "View Artists", artists_path(@artists) %>

<table class="ui striped table">
  <thead>
    <tr class="center aligned">
      <th colspan="4"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @songs.each do |song| %>
      <tr class="center aligned">
        <td> Song ranking </td>
        <td><%= song.name %></td>
        <td><%= song.genre %></td>
        <td><%= song.artist %></td>
        <td><%= link_to @artist.name, artist_song_path(@artist, song), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>