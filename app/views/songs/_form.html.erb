  <h1><%= @song.id ? 'Edit Song' : 'Song Info' %></h1>
<hr />
<%= form_with(model: [@artist, @song], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true, placeholder: "Song Name" %>
  <br />
  <%= f.label :genre %>
  <%= f.text_field :genre, placeholder: "Metal, Rock, Rap, Pop, etc,..." %>
  <br />
  <%= f.label :album %>
  <%= f.text_field :album, placeholder: "Album This Song Appeared On" %>
  <br />
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>